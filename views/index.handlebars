<h1>Burgers</h1>

<h2>Burgers that are ready to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger ready=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers in your belly</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger ready=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Eaten!<br>
    <input type="radio" name="eaten" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>
