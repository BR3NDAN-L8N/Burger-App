<article>
  <header class="row">
    <h1 class="col text-center">Welcome to McDowells!</h1>
  </header>
  <section class="row d-flex justify-content-around">
    <div class="red-border col">
      <h2 class="col">Menu</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger ready=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="red-border col">
      <h2 class="col">Trash</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger ready=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </section>
</article>

<article class="row d-flex justify-content-center red-border">
  <div class="col">
    <h2 class="col">Cook a Burger</h2>
    <form class="row create-form p-2">

      <div class="form-group col">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <div class="form-group col">
        <label for="eaten">Add burger to the menu?</label><br>
        <input type="radio" name="eaten" value="0" checked> Yes
        <br>
        <input type="radio" name="eaten" value="1"> No
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</article>